rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir acceso a los datos del usuario específico
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permitir acceso a datos públicos de especialidades (opcional)
    match /specialties/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a nombramientos del usuario
    match /appointments/{userId}/userAppointments/{appointmentId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
